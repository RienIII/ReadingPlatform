@model WA.BooksPlatform.Models.ViewModels.BookRankVM

@{
    ViewBag.Title = "Rank";
}

<h2>排行</h2>

@if (!Model.Books.Count.Equals(0))
{
    <div class="row">
        @foreach (var item in Model.Books)
        {
            <a href="/Books/Index?bookId=@item.Id">
                <div class="row col-md-12">
                    <div class="col-md-3">
                        <img src="~/Files/BookImages/" style="width: 100%; height: 100%" />
                    </div>
                    <div class="col-md-9">
                        <h4>@item.Name</h4>
                        @item.Author&emsp;@item.TotalWord
                        <br />
                        @item.BirefBlurb
                    </div>
                </div>
            </a>
        }
    </div>
}
else
{
    <tr>
        <td>查無資料</td>
    </tr>
}
<br />

