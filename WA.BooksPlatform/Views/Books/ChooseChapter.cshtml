@model WA.BooksPlatform.Models.ViewModels.BookVM
@using WA.BooksPlatform.Controllers
@{
    ViewBag.Title = "ChooseChapter";
    var chapterLink =(BooksController.ChapterLink)ViewBag.ChapterLink;
    var pages = 1;
}

<div>
    <a href="/Books/Index?bookId=@Model.Id" class="btn btn-default">返回</a>
    <hr />
    <h2><p class="text-center">@Model.Name</p></h2>
</div>
    <table class="table">
        <tr>
            @foreach (var item in Model.Chapter.Chapter)
            {
                <td style="font-size:24px">
                    <p class="text-center">@chapterLink.DisplayChapter(Model.Id, pages, item.Name)</p>
                </td>
                pages = pages + 1;
            }
        </tr>
    </table>
